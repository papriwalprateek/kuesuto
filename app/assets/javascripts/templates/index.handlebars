<ul class="breadcrumbs add_bar"> 

{{#each App.breadcrumbs}}
	<li {{bind-attr class=active}}><a {{bind-attr href=url}} >{{name}}</a></li> 
{{/each }}
</ul>

<div class="small-12 columns side-nav explorer_column"  style="padding:0px;">
{{#ifeq controller.has "list"}}

	 <ul class="side-nav explorer_column_s" >

		{{#each controller.list}}
			<li>
			{{#view App.ExploreButtonView}}
			{{#ifeq type "leaf"}}
			<span class="nav_icon1 nav_entity"></span>
			{{/ifeq}}
			{{#ifeq type "notleaf"}}
			<span class="nav_icon1 nav_folder"></span>
			{{/ifeq}}
			
			{{name}}
			{{/view}}
			</li>
		{{/each}}
	</ul>
{{/ifeq}}


{{#ifeq controller.has "tiles"}}
{{#view App.ContentView}}

<div class="row">
<div class="large-3 columns side-nav " >

{{#each controller.tiles}}
{{#view App.ContentTabsView}}
	{{tile_title}}
{{/view}}

{{/each}}
</div>
<div class="large-9 columns ">
{{#each controller.tiles}}

	<div class="panel card" {{bind-attr id= "tile_title" }}> 
  	
  		<div class="card_title">{{tile_title}}</div>
  		
 		<div >
 				{{#ifeq tile_title "article"}} <button onclick='mySwipe.prev()'>prev</button> <button onclick='mySwipe.next()'>next</button>
 		  		<div id='mySwipe' style='margin:0 auto' class='swipe'><div class='swipe-wrap'>	
 				{{/ifeq}}
 			{{#each tile_nodes}}
  				<div class="panel" >
 		
  				{{#ifeq node.out_type "text"}}
  					{{{node.cache}}}  		
  				{{/ifeq}}
  				{{#ifeq node.out_type "video"}}
  					<iframe width="520" height="300"{{bind-attr src= node.url}}></iframe>
  				{{/ifeq}}
  			
  				</div>
  			{{/each}}
		 {{#ifeq tile_title "article"}}</div></div>{{/ifeq}}
  		
		</div>
	</div>   
{{/each}}
</div>
</div>
{{/view}}
{{/ifeq}}

{{#ifeq controller.has "error"}}
	{{{controller.error}}}
{{/ifeq}}

{{#ifeq controller.has "repos"}}
	{{#each controller.repos}}
		{{#view App.ExploreButtonView}}	
		{{name}}
		{{/view}}
	{{/each}}
{{/ifeq}}

</div>
	