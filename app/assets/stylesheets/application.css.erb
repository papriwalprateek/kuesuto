.box {  
        width: 0px;  
        height: 400px; 
        -webkit-transition: width 0.3s ease, height 2s ease;  
        -moz-transition: width 0.3s ease, height 2s ease;  
        -o-transition: width 0.3s ease, height 2s ease;  
        transition: width 0.3s ease, height 2s ease; 
     }  
 div.box ul{
        display: none; 	
 }     
 
 div.box-change ul{
        display: block; 	
 }     
.box-change {  
        width: 100%;  
        height: 400px;  
        border-right: 1px solid #dedede;
   
   		
    }  