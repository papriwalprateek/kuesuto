.box {  
        width: 0px;  
        height: 400px; 
        -webkit-transition: width 0.3s ease-out, height 2s ease, opacity 2s ease-out;  
        -moz-transition: width 0.3s ease-out, height 2s ease, opacity 2s ease-out;  
        -o-transition: width 0.3s ease-out, height 2s ease, opacity 2s ease-out;  
        transition: width 0.3s ease-out, height 2s ease, opacity 2s ease-out; 
     }  
 div.box ul{
        display: none; 	
 }     
 
 div.box-change ul{
        display: block; 	
 }     
