.root_row{
	height: 100%;
}
.root_row .side-nav{
	background-color: #efefef;
	height: 100%;
}
.root_row .side-nav ul{
	padding: 0px 20px;
}
.root_row .side-nav ul li a{
	color: #666;
	font-size: 16px;
}
.root_row .side-nav ul li a:hover{
	color: #000;
}
.root_row .main_container{
	padding-top: 10px;
	
}
nav.top-bar{
	background-color: #eee;
}
.top-bar-section ul{
	background-color: #eee;
}

.nav_icon
{ 
   width:20px; 
   height:20px;
   margin: 3px;
   margin-right: 16px;
   display: block;
   float: left;
}
.nav_icon_repo{
background: url(<%= asset_path 'repo.png' %>) left top;
}
.nav_icon_flow{
background: url(<%= asset_path 'flow.png' %>) left top;
}
.nav_icon_contri{

background: url(<%= asset_path 'contri.png' %>) left top;
}
.nav_icon_rlist{
background: url(<%= asset_path 'read.png' %>) left top;
}
.nav_icon_user{
  width: 32px;
  height: 32px;
  margin-right: 10px;
  border-radius: 16px;
	-webkit-border-radius: 16px;
	-moz-border-radius: 16px; 	
}
span.signout{
background: url(<%= asset_path 'signout.png' %>);
display:block;
height:20px;
width:20px;
float:left;
margin-right:4px;
}
.fb_login{
