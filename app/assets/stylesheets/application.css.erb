.root_row{
	height: 100%;
}
.root_row .main_container{
	padding-top: 10px;
	height: 100%;
	background-color: #fff;	
}
#content_yield{
	height: 80%;
}
nav.top-bar{
	background-color: #eee;
}
.top-bar-section ul{
	background-color: #eee;
}

.left-off-canvas-menu .side-nav li a{
	color: #666;
	font-size: 16px;
}
